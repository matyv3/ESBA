@model IEnumerable<Negocio.Usuario>
@{
    ViewBag.Title = "Alumnos";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="card-title">Alumnos</h4>
                    </div>
                    <div class="col-md-6">
                        @if (ViewBag.rol == "administrativo")
                        {
                            <a href="@Url.Action("CrearUsuario","Panel", new { rol_id = 1 })" class="btn btn-primary pull-right">
                                <i class="now-ui-icons ui-1_simple-add"></i>
                                Nuevo
                            </a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @if (!string.IsNullOrEmpty(ViewBag.error))
                        {
                            <div class="alert alert-danger" role="alert" style="margin-top: 15px">
                                @ViewBag.error
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.success))
                        {
                            <div class="alert alert-success" role="alert" style="margin-top: 15px">
                                @ViewBag.success
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>DNI</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                            <tr>
                                <td>@user.name @user.surname</td>
                                <td>@user.Email</td>
                                <td>@user.document</td>
                                <td>@user.Phone</td>
                                <td>@user.Address</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
