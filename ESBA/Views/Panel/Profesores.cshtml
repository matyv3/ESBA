@model IEnumerable<Negocio.Usuario>
@{
    ViewBag.Title = "Profesores";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">                
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="card-title">Profesores</h4>
                    </div>
                    <div class="col-md-6">
                        @if (ViewBag.rol == "administrativo")
                        {
                            <a href="@Url.Action("CrearUsuario","Panel", new { rol_id = 2 })" class="btn btn-primary pull-right">
                                <i class="now-ui-icons ui-1_simple-add"></i>
                                Nuevo
                            </a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @if (!string.IsNullOrEmpty(ViewBag.error))
                        {
                            <div class="alert alert-danger" role="alert" style="margin-top: 15px">
                                @ViewBag.error
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.success))
                        {
                            <div class="alert alert-success" role="alert" style="margin-top: 15px">
                                @ViewBag.success
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>DNI</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th>Opciones</th>
                        </thead>
                        <tbody>
                            @foreach (var profe in Model)
                            {
                                <tr>
                                    <td>@profe.name @profe.surname</td>
                                    <td>@profe.Email</td>
                                    <td>@profe.document</td>
                                    <td>@profe.Phone</td>
                                    <td>@profe.Address</td>
                                    <td>
                                        <a href="@Url.Action("MateriasProfesor","Panel", new { user_id = profe.user_id })" class="btn btn-info">Ver Materias</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

